@font-face {
    font-family: "Calvino Grande Extralight";
    src: url('http://127.0.0.1:9292/cdn/shop/t/13/assets/Calvino-Grande-Extralight.woff2?3361') format('woff2'), /* Modern Browsers */
    url('http://127.0.0.1:9292/cdn/shop/t/13/assets/Calvino-Grande-Extralight.woff?3361') format('woff2');
    font-weight: 200; /* Adjust the font weight as needed */
    font-style: normal; /* Adjust the font style as needed */
  }
  
  /* Apply the font to an element */
  h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: 'Calvino Grande Extralight', serif !important;
  }


  .button, a.button, .btn, a.btn, button, input[type=submit], input[type=reset], input[type=button], .btn, a.btn, .button, a.button, .button.button--large, button.button--large, .btn.quickbuy-toggle, button.shopify-payment-button__button {
    height:52px;
    border-radius:30px !important;
    border:1px solid black;
    color:#000000;
    text-transform: capitalize;
    line-height: 49px;
    font-size: 1.25rem;
    padding: 0 2rem;
}
.btn.btn--primary, .button.button--large, button.button--large {
    background:#efefe0 !important;
}
.btn.btn--primary:hover, .button.button--large:hover, button.button--large:hover {
    background:#D3D4AE  !important;
    color:#000000  !important;
    border:1px solid black;
}
.btn.btn--secondary, .shopify-payment-button__button {
    background:#ffffff !important;
    color:#000000 !important;
}
.btn.btn--secondary:hover, .shopify-payment-button__button:hover {
    background:#efefe0;
    color:#000000;
    border:1px solid black;

}
.product-block .image-cont .btn.quickbuy-toggle {
    line-height:0.5rem;
    height:37px;
}

.product-form .quantity-submit-row.has-spb .button {
    background:#efefe0;
}
.product-form .quantity-submit-row.has-spb .button:hover {
    background:#D3D4AE;
    color:#000000;

}

input[type=text], input[type=number], input[type=email], input[type=password], input[type=address], input[type=tel], textarea {
    border:1px solid #DBDBDB;
    color:#6A6A6A;
    border-radius:30px !important;
    padding: 0.8em 16px;
}

